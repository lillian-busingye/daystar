doctype html
head
  meta(charset='UTF-8')
  title Sitter Check Out Form
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel="stylesheet", href="/css/style.css")
  include navbar 
  .container.mt-4.mb-4.bg-white.p-4.border(style='color: black; display-content:center;')
      h2.mb-4 Check Out Sitter
      form#checkinForm(action='/sitterscheckout?id='+sitter._id  method='POST')
        //- .form-group
        //-   label(for='sitterNumber') Sitter Number 
        //-   select#sitterNumber(name="") .form-control(name='sitterNumber')
        //-     option(value='') Select Sitter's Name
        //-     each sitter in sitters 
        //-       option(value=sitter_id) #{sitter.name}
        .form-group
          label(for='name') Full Name 
          input#name.form-control(type='text' name='name' placeholder='full name' value=sitter.name readonly)
        .form-group
          label(for='timeofDeparture') Time of departure 
          input#timeofDepature.form-control(type='time' name='timeofDeparture' placeholder='Enter time')
        .form-group
          label(for='phonenumber') Phone Number  
          input#phonenumber.form-control(type='text' name='phonenumber' placeholder='Enter phone number' value=sitter.phonenumber readonly)
        .form-group
          label(for='sitternumber') Sitter Number 
          input#sitternumber.form-control(type='text' name='sitternumber' placeholder='Enter sitter number'  value=sitter.sitternumber readonly)
          input#status(type='hidden' name='status' value='Absent')
          
        //-   .form-group
        //-   label Period of Stay
        //-   br
        //-   .form-check.form-check-inline
        //-     input#fullDay.form-check-input(type='radio' name='periodOfStay' value='Full Day(UGX 15,000)' checked='')
        //-     label.form-check-label(for='fullDay') Full Day (UGX 15,000)
        //-   .form-check.form-check-inline
        //-     input#halfDay.form-check-input(type='radio' name='periodOfStay' value='Half Day(UGX 10,000)')
        //-     label.form-check-label(for='halfDay') Half Day (UGX 10,000)
          .form-group
            label(for='sitter') Assign Sitter
            select#sitter.form-control(name='sitter')
              option(value='') Select Sitter
              each sitter in availableSitters
                option(value=sitter._id) #{sitter.name}
        button.btn.btn-primary(type='submit') Check Out 
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
script(src='/js/JS/sittercheckout.js')