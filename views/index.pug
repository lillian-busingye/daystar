header.container.mt-3(style='border-style: none;')
  .container.mt-3(style='border-style: none; width: 100%; font-size: 50px;')
    h1
      b WELCOME TO DAYSTAR DAYCARE
    p.motto(style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: blue;") &quot;Your Child&apos;s Home Away from Home&quot;
  #carouselExampleAutoplaying.carousel.slide(data-bs-ride='carousel')
    .carousel-inner(style='width: 100%;')
      .carousel-item.active
        img.d-block.w-100(src='/images/images/ABC-Kidcare-Logo-small@2x-1.png' alt='letters')
      .carousel-item
        img.d-block.w-100(src='/images/images/building.jpeg' alt='building')
      .carousel-item
        img.d-block.w-100(src='/images/images/images.webp' alt='kids')
      .carousel-item
        img.d-block.w-100(src='/images/images/johannesburg-south-africa-june-young-african-kids-small-creche-daycare-preschool-young-african-kids-small-creche-daycare-181063826.webp' alt='babies')
      .carousel-item
        img.d-block.w-100(src='/images/images/school-playground.jpeg' alt='school-playground')
      .carousel-item
        img.d-block.w-100(src='/images/images/teacher.webp' alt='teacher')
    button.carousel-control-prev(type='button' data-bs-target='#carouselExampleAutoplaying' data-bs-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.visually-hidden Previous
    button.carousel-control-next(type='button' data-bs-target='#carouselExampleAutoplaying' data-bs-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.visually-hidden Next
