doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Daystar Daycare
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
  link(rel='stylesheet' href='/public/css/style.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
nav.navbar.navbar-expand-lg.bg-body-tertiary
  .container-fluid
    a.navbar-brand(href='#') DAYSTAR DAYCARE
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='/Daycare-App/index.html') HOME
        li.nav-item
          a.nav-link(href='/Daycare-App/about.html') ABOUT
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
            | REGISTRATION
          ul.dropdown-menu
            li
              a.dropdown-item(href='/views/registerbaby.html') Register Baby
            li
              a.dropdown-item(href='/views/sitterregistration.html') BabySitter Registration
            li
              a.dropdown-item(href='/views/user-login.html') Administrator
            li
              a.dropdown-item(href='/views/payments.html') Payments
            li
              a.dropdown-item(href='/views/procurement.html') Procurement
            li
              a.dropdown-item(href='/views/checkinandcheckout.html') CheckinandCheckout
        .d-flex(role='search')
          button.btn.btn-outline-success(type='submit' style='margin-right: 40px;') DONATE TO US
      .d-flex(role='search')
        button.btn.btn-outline-success(type='submit' style='margin-right: 40px;') CONTACT US
      .social-icons
        a.icon.facebook(href='#')
          i.fab.fa-facebook-f
        a.icon.twitter(href='#')
          i.fab.fa-twitter
        a.icon.instagram(href='#')
          i.fab.fa-instagram
        a.icon.linkedin(href='#')
          i.fab.fa-linkedin-in
        a.icon.youtube(href='#')
          i.fab.fa-youtube
.container
  h2  LOGIN
  form#loginForm(action='#' method='POST')
    .form-group
      label(for='username') Email:
      input#email(type='text' name='email')
    .form-group
      label(for='username') Username:
      input#username(type='text' name='username')
    .form-group
      label(for='password') Password:
      input#password(type='password' name='password')
    button(type='submit') LOGIN
  #message
script(src='../public/js/JS/login.js')
