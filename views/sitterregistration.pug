.container.mt-3
  h2 BABY-SITTER REGISTRATION FORM
  form#sitterForm(action='#' method='POST')
    .mb-3
      label.form-label(for='exampleInputEmail1') Sitters Full Name :
      input#name.form-control(type='text' aria-describedby='emailHelp' name='name')
      // <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    .mb-3
      label.form-label(for='exampleInputEmail1') Location:
      input#location.form-control(type='text' aria-describedby='emailHelp' name='location')
    .mb-3
      label.form-label(for='exampleInputEmail1') Next of Kin Names :
      input#kin-name.form-control(type='text' aria-describedby='emailHelp' name='kin')
    .mb-3
      label.form-label(for='exampleInputEmail1') AGE:
      input#age.form-control(type='text' aria-describedby='emailHelp' name='age')
    .mb-3
      label.form-label(for='exampleInputEmail1') Level of Education :
      input#education.form-control(type='text' aria-describedby='emailHelp' name='education')
    .mb-3
      label.form-label(for='exampleInputEmail1') NIN :
      input#nin.form-control(type='text' aria-describedby='emailHelp' name='nin')
    //
      <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Sitter number :</label>
      <input type="number" class="form-control" id="sitternumber" aria-describedby="emailHelp" name="number">
      </div>
    .mb-3
      label.form-label(for='exampleInputEmail1') Contacts :
      input#contact.form-control(type='number' aria-describedby='emailHelp' name='contact')
    .mb-3
      label.form-label(for='exampleInputPassword1') Gender :
      select#gender(name='name')
        option(value='') Select Gender
        option(value='') Female
        option(value='') Male
    .mb-3.form-check
      input#register.form-check-input(type='checkbox')
      label.form-check-label(for='exampleCheck1') Register Now
    button.btn.btn-primary(type='submit') Submit
    #message  Sitter Registered 
