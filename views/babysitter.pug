doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width, initial-scale=1.0" 
      name="viewport"
      )
    title Daycare Sitter Registration
    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      )
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card
            .card-header
              h3.text-center Daycare Sitter Registration
            .card-body
              form(method="POST" action="/Reg")
                .mb-3
                  label.form-label(for="fullName") Full Name
                  input#fullName.form-control( 
                    placeholder="FullName"
                    name="name" 
                    type="text"
                    )
                .mb-3
                  label.form-label(for="gender") Gender
                  select#gender.form-control(placeholder="Gender"
                    name="gender" 
                    rows="3"
                    ) 
                    option(value="") Select Gender   
                    option(value="male") Male 
                    option(value="female") Female
                .mb-3
                  label.form-label(for="email") Email address
                  input#email.form-control(
                    placeholder="emailAddress"
                    name="email" 
                    type="email"
                    )
                .mb-3
                  label.form-label(for="dateofBirth") DateofBirth
                  input#dateofBirth.form-control(
                    placeholder="dateofBirth"
                    name="dateofBirth" 
                    type="date"
                    )
                .mb-3
                  label.form-label(for="NextofKin") Next of Kin
                  input#nextofKin.form-control(
                    placeholder="nextofKin"
                    name="nextofKin" 
                    type="text"
                    )
                .mb-3
                  label.form-label(for="NIN") NIN
                  input#nin.form-control(
                    placeholder="nin"
                    name="nin" 
                    type="text"
                    )
                .mb-3
                  label.form-label(for="Religion") Religion
                  input#religion.form-control(
                    placeholder="religion"
                    name="religion" 
                    type="text"
                    )
                .mb-3
                  label.form-label(for="phone") Phone Number
                  input#phone.form-control(
                    placeholder="phoneNumber"
                    name="phonenumber" 
                    type="tel"
                    )
                .mb-3
                  label.form-label(for="address") Address
                  input#address.form-control(placeholder="address"
                    name="currentAddress" 
                    type="text"
                    )
                .mb-3
                  label.form-label(for="experience") Experience
                  textarea#experience.form-control(
                    placeholder="experience"
                    name="Experience" 
                    rows="3"
                    )
                .mb-3
                  label.form-label(for="RecommendersName") Recommenders Name
                  textarea#recommendersName.form-control(
                    placeholder="RecommendersName"
                    name="recommendersname" 
                    type="text"
                    )
                .mb-3
                  label.form-label(for="LevelofEducation") Level of Education
                  textarea#levelofEducation.form-control(
                    placeholder="LevelofEducation"
                    name="levelofeducation" 
                    type="text"
                    )
                .mb-3
                  label.form-label(for="role") Role 
                  input#role.form-control(placeholder="Role"
                    name="role" 
                    rows="3"
                    )  
                .mb-3
                  label.form-label(for="sitterNumber") Sitter Number
                  input#sitterNumber.form-control(placeholder="SitterNumber"
                    name="sitternumber" 
                    type="number"
                    )  
                .mb-3
                  label.form-label(for="availability") Availability
                  input#availability.form-control( 
                    placeholder="availability"
                    name="Availability" 
                    type="text"
                    )
                .text-center
                  button.btn.btn-primary(type="submit") Submit