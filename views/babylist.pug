doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width, initial-scale=1.0" 
      name="viewport"
      )
    title Baby Register Details
    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      )
  body
    .container
      h2 Baby Register Details
      table.table.table-striped 
        thead
          tr
            th(scope="col") Baby's Number
            th(scope="col") Baby's Name
            th(scope="col") Date of birth 
            th(scope="col") Gender
            th(scope="col") Parent's Names
            th(scope="col") Parent's Contact
            th(scope="col") Email 
            th(scope="col") Location
            th(scope="col") Delete
            th(scope="col") Update 

        tbody
         if babies.length
         each baby in babies
          tr
            td #{baby.babyNumber}
            td #{baby.name}
            td #{baby.date}
            td #{baby.gender}
            td #{baby.parent}
            td #{baby.contact}
            td #{baby.email}
            td #{baby.address} 
            td
              form(method="POST" action="babydelete")
                input(type="hidden" name="id" value=baby._id)
                button.btn.btn-danger.btn-sm(type="submit") Delete 
            td   
              a.btn.btn-primary.btn-sm(href="/babiesupdate/"+ baby._id) Update